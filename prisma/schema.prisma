generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Post {
  id           Int       @id @default(autoincrement())
  notionPageId String?   @unique 
  slug         String    @unique
  title        String
  cover        String?
  views        Int       @default(0) 
  publishedAt  DateTime?  @db.Timestamptz(6)
  editedAt     DateTime?  @db.Timestamp(6)

  categoryId   Int?      
  category  Category? @relation(fields: [categoryId], references: [id])

  tagId        Int?      
  tag       Tag?      @relation("PostTagRelation", fields: [tagId], references: [id])
  postTags  PostTag[]

  @@map("posts")
}

model Category {
  id        Int      @id @default(autoincrement())
  title     String
  posts     Post[]
  createdAt DateTime @default(now())  @db.Timestamptz(6)
  updatedAt DateTime @default(now())  @db.Timestamptz(6)

  @@map("categories")
}

model Tag {
  id        Int       @id @default(autoincrement())
  title     String
  posts     Post[]    @relation("PostTagRelation")
  postTags  PostTag[]
  createdAt DateTime  @default(now())  @db.Timestamptz(6)
  updatedAt DateTime  @default(now())  @db.Timestamptz(6)

  @@map("tags")
}

model PostTag {
  postId Int 
  tagId  Int 

  post Post @relation(fields: [postId], references: [id])
  tag  Tag  @relation(fields: [tagId], references: [id])

  @@id([postId, tagId])
  @@map("post_tags")
}